@model List<Gmi.RosterManager.Models.TeamModel>
@{
    ViewBag.Title = "Gmi Roster Manager";
}
<div class="row">
   <div class="col-md-12 coverContainer">
       <div class="coverBox text-center">
           <img class="cover" src="../../Content/Images/front.jpg" />
           <h1 class="coverTitle">Generic Moba Invitational</h1>
           <h3 class="coverTitle">Season 2 Tournament Roster Manager</h3>
       </div>
   </div>
</div>

<div class="row">
    <div style="padding-top:20px">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">Teams</h2>
            </div>
            <div class="panel-body">
                @foreach (var item in Model)
            {
                    <div class="col-md-4 entityContainer">
                        <Center>
                            <div class="entityBox">
                                <a href="@Url.Action("Details","Team", new { id = item.TeamId })">
                                    <img class="banner" src="@Url.Action("Image", "Image", new {id = item.BannerImageId})" />
                                </a>
                            </div>
                            <label class="layeredLabel">@Html.DisplayFor(modelItem => item.Name)</label>
                        </Center>
                    </div>

                }
                <div class="col-md-4 entityContainer">
                    <Center>
                        <div class="entityBox">
                            <a href="@Url.Action("Add","Team")">
                                <div class="upload" style="height:200px; width:200px">
                                    <i class="glyphicon glyphicon-plus "></i>
                                </div>

                            </a>
                        </div>
                        <label class="layeredLabel">Add New Team</label>
                    </Center>
                </div>
            </div>
        </div>
    </div>
</div>

