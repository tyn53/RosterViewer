                @Html.TextBoxFor(model => model.BannerImageFile, new { type = "file" , @class = "form-control" })
                @Html.ValidationMessageFor(model => model.BannerImageFile, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
