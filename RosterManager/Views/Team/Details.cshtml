@model Gmi.RosterManager.Models.TeamModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="padding-top:20px">
    <div class="panel panel-default">
        <div class="panel-heading">
            <a data-toggle="collapse" href="#statPanel">
                <h4 class="panel-title no-underline inline">@Html.DisplayFor(model => model.Name) - Statistics</h4>
            </a>
            <a class="btn btn-default pull-right text-center" style="margin-top:-8px; margin-right:-13px" onclick="@("window.location.href='" + Url.Action("Delete", "Team", new { id = Model.ID }, null) + "'");"><i class="glyphicon glyphicon-trash" style="color:#C60000; margin-right:1px; margin-top:2px"></i></a>
        </div>
        <div id="statPanel" class="panel-collapse">
            <div class="panel-body">
                <div class="col-sm-3">
                    <img src="@Url.Action("Image","Image", new { id = Model.BannerImageId })" class="banner" />
                </div>
                <div class="col-sm-5">
                    <dl class="dl-horizontal">
                        <dt>
                            Team Name
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Name)
                        </dd>

                        @foreach (var item in Model.Stats.OrderBy(s => s.Name))
                        {
                            <dt>@Html.DisplayFor(modelItem => item.Name) </dt>
                            <dd>
                                <a href="@("#teamNameButtons"+ item.StatID)" data-toggle="collapse">
                                    @Html.DisplayFor(modelItem => item.Value)
                                </a>
                                <div id="@("teamNameButtons"+ item.StatID)" class="collapse">
                                    <div class="btn-group">
                                        <button class="btn btn-default" onclick="@("window.location.href='" + Url.Action("Edit", "Stat", new { entityId = item.entityID, item.EntityType }, null) + "'")"><i class="glyphicon glyphicon-edit"></i> </button>
                                        <button class="btn btn-default" onclick="@("window.location.href='" + Url.Action("Delete", "Stat", new { item.StatID }, null) + "'")"><i class="glyphicon glyphicon-remove"></i> </button>
                                    </div>
                                </div>
                            </dd>
                        }
                    </dl>
                    <button class="btn btn-default pull-right" onclick="@("window.location.href='" + Url.Action("Add","Stat", new { entityId = Model.ID, type = Gmi.RosterManager.Models.EntityType.Team }, null) + "'")">Add Statistic</button>
                </div>
            </div>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">
            <a data-toggle="collapse" href="#playerPanel">
                <h4 class="panel-title">Players</h4>
            </a>
        </div>
        <div id="playerPanel" class="panel-collapse">
            <div class="panel-body">
                @foreach (var item in Model.Players.OrderBy(p => p.ScreenName))
                {
                    <div class="col-md-4 entityContainer">
                        <Center>
                            <div class="entityBox">

                                <a href="@Url.Action("Details","Player", new { id = item.PlayerID })">
                                    <img class="banner" src="@Url.Action("Image", "Image", new {id = item.AvatarImageID})" />
                                </a>
                            </div>
                            <label class="layeredLabel">@Html.DisplayFor(modelItem => item.FirstName) &quot;@Html.DisplayFor(modelItem => item.ScreenName)&quot; @Html.DisplayFor(modelItem => item.LastName)</label>
                        </Center>
                    </div>
                }
                <div class="col-md-4 entityContainer">
                    <Center>
                        <div class="entityBox">

                            <a href="@Url.Action("Add","Player")">
                                <div class="upload" style="height:200px; width:200px">
                                    <i class="glyphicon glyphicon-upload "></i>
                                </div>
                            </a>
                            <label class="layeredLabel">Add New Player</label>
                        </div>
                        <label class="layeredLabel">Add New Player</label>
                    </Center>
                </div>

            </div>
        </div>
    </div>


    <div class="row">
        <p>
            @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
            @Html.ActionLink("Delete", "Delete", "Team", new { id = Model.ID }, null) |
            @Html.ActionLink("Back to List", "Index")
        </p>
    </div>
</div>
