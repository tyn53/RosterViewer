@model Gmi.RosterManager.Models.TeamModel
@{
    ViewBag.Title = "Team";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Add Team</h2>
<div>
    
    @using (Html.BeginForm("Add", "Team", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.TextBoxFor(m => m.Name);
        <input type="file" class="form-control" name="ImageData" id="ImageData" onchange="fileCheck(this);" />
        <input type="submit" class="btn btn-default" value="Submit" />
    }
</div>

