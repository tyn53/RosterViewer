@model Gmi.RosterManager.Models.PlayerModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="padding-top:20px">
    <div class="panel panel-default">
        <div class="panel-heading">
            <a data-toggle="collapse" href="#statPanel">
                <h4 class="panel-title no-underline inline">@Html.DisplayFor(model => model.FirstName) &quot;@Html.DisplayFor(model => model.ScreenName) &quot; @Html.DisplayFor(model => model.LastName) - Statistics</h4>
            </a>
            <a class="btn btn-default pull-right text-center" style="margin-top:-8px; margin-right:-13px" onclick="@("window.location.href='" + Url.Action("Delete", "Player", new { id = Model.PlayerID }, null) + "'");"><i class="glyphicon glyphicon-trash" style="color:#C60000; margin-right:1px; margin-top:2px"></i></a>
        </div>
        <div id="statPanel" class="panel-collapse">
            <div class="panel-body">
                <div class="col-sm-3 entityContainer">
                    <div class="entityBox">
                        <img src="@Url.Action("Image","Image", new { id = Model.AvatarImageID })" class="banner" />
                    </div>
                </div>
                <div class="col-sm-9">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayName("Screen Name")
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.ScreenName)
                        </dd>
                        <dt>
                            @Html.DisplayName("First Name")
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.FirstName)
                        </dd>
                        <dt>
                            @Html.DisplayName("Last Name")
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.LastName)
                        </dd>

                        <dt>
                            @Html.DisplayName("Team Name")
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.TeamName)
                            
                        </dd>

                        @foreach (var item in Model.Stats.OrderBy(s => s.Name))
                        {
                            <dt>@Html.DisplayFor(modelItem => item.Name) </dt>
                            <dd>
                                <a href="@("#teamNameButtons"+ item.StatID)" data-toggle="collapse">
                                    @Html.DisplayFor(modelItem => item.Value)
                                </a>
                                <div id="@("teamNameButtons"+ item.StatID)" class="collapse">
                                    <div class="btn-group">
                                        <button class="btn btn-default" onclick="@("window.location.href='" + Url.Action("Edit", "Stat", new { statId = item.StatID }, null) + "'")"><i class="glyphicon glyphicon-edit"></i> </button>
                                        <button class="btn btn-default" onclick="@("window.location.href='" + Url.Action("Delete", "Stat", new { statId = item.StatID }, null) + "'")"><i class="glyphicon glyphicon-remove"></i> </button>
                                    </div>
                                </div>

</dd>
                        }
                    </dl>
                    <button class="btn btn-default pull-right" onclick="@("window.location.href='" + Url.Action("Add","Stat", new { entityId = Model.PlayerID, type = Gmi.RosterManager.Models.EntityType.Player }, null) + "'")">Add Statistic</button>
                </div>
            </div>
        </div>
    </div>

    <p>
        @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
        @Html.ActionLink("Back to List", "Index")
    </p>

</div>